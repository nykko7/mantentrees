<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MenuPrincipal"
    android:background="@android:color/black">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:fontFamily="@font/happy_monkey"
        android:layout_marginVertical="10dp"
        android:textSize="50dp"
        android:text="Mantentrees"
        android:id="@+id/titulo"
        android:textColor="@android:color/white"
        android:textAlignment="center"/>

    <LinearLayout
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/titulo"
        android:gravity="center_horizontal"
        android:background="@android:color/white">

        <Button
            android:id="@+id/boton_registrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            android:layout_marginHorizontal="30dp"
            android:background="@color/semiNegro"
            android:text="Registrar Arbol"
            android:layout_marginTop="30dp"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/boton_registros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:text="Ver Registros"
            android:textSize="20sp"
            android:background="@color/semiNegro"/>

        <Button
            android:id="@+id/boton_mapa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:text="Ver Mapa"
            android:textSize="20sp"
            android:background="@color/semiNegro"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/boton_salir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Salir"
                android:background="@color/verdeOscuro"
                android:layout_marginBottom="30dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>